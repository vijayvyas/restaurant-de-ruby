<% @menu_items.each do |menu_item| %>
<div class="row card-row">
  <div class="col-xs-12 col-sm-6 col-md-6" style="padding: 1px;">
    <%= image_tag menu_item.image_url, width: '100%' , alt: 'About Us'%>
  </div>
  <div class="col-xs-12 col-xs-6 col-md-6">
    <div clas="info-box">
      <div class="info-box-title">
        <%= menu_item.name %>
      </div>
      <div class="info-box-content">
        <p>
          <%= menu_item.description %>
        </p>
        <div class="menu-price">
          VND <%= menu_item.price %>
        </div>
      </div>
      <div class="info-box-footer  center">
        <%= link_to 'Add to order', user_orders_path(menu_item: menu_item), class: 'btn' %>
      </div>
    </div>
  </div>
</div>
<% end %>
