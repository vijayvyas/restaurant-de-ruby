<div class="menu-section">
  <div style="display: inline-block">
    <h3>
      <%= link_to 'Breakfast', menu_path(section:'breakfast'), class:"label lable-menu-section #{'selected-section' if @section.to_s == 'breakfast'}", style:"margin-right: 40px;" %>
      <%= link_to 'Lunch', menu_path(section:'lunch'), class:"label lable-menu-section #{'selected-section' if @section.to_s == 'lunch'}", style:"margin-right: 40px;" %>
      <%= link_to 'Dinner', menu_path(section:'dinner'), class:"label lable-menu-section #{'selected-section' if @section.to_s == 'dinner'}", style:"margin-right: 40px;" %>
      <%= link_to 'Drink', menu_path(section:'drinks'), class:"label lable-menu-section #{'selected-section' if @section.to_s == 'drinks'}" %>
    </h3>
  </div>
  <div class="btn-group" style="float:right;">
    <button type="button" class="btn btn-default">Sort By</button>
    <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
      <span class="sr-only">Toggle Dropdown</span>
    </button>
    <div class="dropdown-menu">
      <%= link_to 'Name: A-Z', menu_path(section: @section, order_key: 'name', order_value: 'ASC'), class:"dropdown-item" %>
      <%= link_to 'Name: Z-A', menu_path(section: @section, order_key: 'name', order_value: 'DESC'), class:"dropdown-item" %>
      <%= link_to 'Price: Low First', menu_path(section: @section, order_key: 'price', order_value: 'ASC'), class:"dropdown-item" %>
      <%= link_to 'Price: High First', menu_path(section: @section, order_key: 'price', order_value: 'DESC'), class:"dropdown-item" %>
    </div>
  </div>
</div>

<%= render 'menu_item' %>
