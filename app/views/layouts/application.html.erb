<!DOCTYPE html>
<html>
<head>
  <title>Restaurent De Ruby</title>
  <%= csrf_meta_tags %>

  <%= stylesheet_link_tag 'http://fonts.googleapis.com/css?family=Oleo+Script' %>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
</head>

<body>
  <div class="page-title">Restaurent De Ruby</div>
  <div class="page-body">
    <div class="page-nav" style="padding-bottom:10px;">
      <nav class="navbar navbar-default page-navbar">
        <ul class="nav navbar-nav">
          <li class="nav-item <%= 'active' if current_page?(root_path) %> ">
            <%= link_to 'Home', root_path , class: 'nav-link'%>
          </li>
          <li class="nav-item <%= 'active' if current_page?(menu_path) %>">
            <%= link_to 'Menu', menu_path , class: 'nav-link'%>
          </li>
          <li class="nav-item <%= 'active' if current_page?(about_us_path) %>">
            <%= link_to 'About Us', about_us_path , class: 'nav-link'%>
          </li>
        </ul>
      </nav>
    </div>
      <%= yield %>
  </div>
</body>
</html>
